{% extends 'home/template.html.twig' %}
{% block title %}Mes annonces!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			{{ controlle_name }}
		</h1>
		{% for user in app.user%}


			<div class="col-3">
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						{{  <user class="username"></user> }}
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.lastname }}</h6>
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.Roles }}</h6>
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.email }}</h6>
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.adresse }}</h6>
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.phone }}</h6>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
