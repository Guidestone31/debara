{% extends 'home/template.html.twig' %}

{% block title %}Hello profileController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			{{ controlle_name }}</h1>
		{% for user in users %}


			<div class="col-3">
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						{{  user.Picture }}
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.Name }}</h6>
						{% for role in user.roles%}
							{% if role == "ROLE_USER"%}
								Utilisateurs
							{% elseif role == "ROLE_ADMIN" %}
								Administrateur
							{% endif %}
						{% endfor %}
						<h6 class="card-subtitle mb-2 text-muted">
							{{  user.LastName }}</h6>
						<p class="card-text">{{  user.adresse  }}
							€</p>
						<a href="{{'/product/'}}" class="card-link">Modifier</a>
						<a href="{{'/product/'}}" class="card-link">Suprimer</a>
						<a href="{{'/product/'}}" class="card-link">Détail</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
