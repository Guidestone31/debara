{% extends 'home/template.html.twig' %}
{% block title %}
	<h1>Détails</h1>
{% endblock %}
{% block body %}
	<h1>
		{{ annoucements.Nom }}
	</h1>

	<main class="container">
		<section class="row">
			<div class="col-12"></div>
			<div class="col-6">
				<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-indicators">
						{% for iteration in 1..annoucements.pictures|length %}
							<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ iteration - 1 }}" {{ (loop.first ) ?'class="active" aria-current="true"' : '' }} aria-label="Slide {{ iteration }}"></button>
						{% endfor %}
					</div>
					<div class="carousel-inner">
						{% for picture in annoucements.pictures %}
							<div class="carousel-item {{ (loop.first ) ? 'active' : '' }}">
								<img src="{{ asset('assets/uploads/annonces/mini/300x300-') ~ picture.name }}" class="d-block w-100" alt="{{ picture.name }}">
							</div>
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</div>
			<div class="col-6">
				<p>{{ annoucements.Description }}</p>
				<p>Catégorie :
					{{ annoucements.SubCategoryO.Name }}</p>
				<p>Prix :
					{{ annoucements.Price / 100 }}
					€</p>
			</div>
		</section>
	</main>
{% endblock %}
