{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<form action="{{ path('app_home') }}" method="post">
		<label for="username">Email:</label>
		<input type="text" id="username" name="_username" value="">
		<div class="mb-3">
			<label class="small mb-1" for="inputUsername">Username</label>
			<input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="{{ last_username }}">
		</div>
		<div class="mb-3">
			<label class="small mb-1" for="inputUsername">Password</label>
			<input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="{{ username }}">
		</div>
		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{# If you want to control the URL the user is redirected to on success
																																														        <input type="hidden" name="_target_path" value="/account"> #}

		<button type="submit">login</button>
	</form>
{% endblock %}
