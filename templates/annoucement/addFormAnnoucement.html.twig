	<script>
		$(document).ready(function () {
var autocomplete;
var id = "location";

autocomplete = new google.maps.places.Autocomplete((document.getElementById(id)), {types: ['geocode']})
google.maps.event.addListener(autocomplete, 'place_changed', function () {
var place = autocomplete.getPlace();
jQuery("#latC").val(place.geometry.location.lat());
jQuery("#longC").val(place.geometry.location.lng());

})
});
	</script>
	<script type="text/javascript">

		function Geo(position) {
console.log(position);
var latC = position.coords.latitude;
var longC = position.coords.longitude;
document.getElementById("latC").innerHTML = latC;
document.getElementById("longC").innerHTML = longC;
loadMap(latC,longC);
console.log(latC);
// google.maps.event.addDomListener('window', 'load', loadMap(latC, longC))
}
window.addEventListener('load', function () {
loadMap("", "");
});

function loadMap(latC,longC) {

console.log(latC, "Coucouc");
if (! latC || ! longC) {
return;
}
console.log(latC, longC);
var options = {
zoom: 8,
center: {
lat: latC,
lng: longC
},
mapTypeId: google.maps.MapTypeId.ROADEMAP
};

map = new google.maps.Map(document.getElementById("map"), options);

var marker = new google.maps.Marker({
map: map,
title: "Je t'ai trouvé",
position: {
lat: latC,
lng: longC
}

});
}
function erreurGeo(erreur) {
var msg;
switch (erreur.code) {
case error.TIMEOUT: msg = "Le temps de la requete à expiré !";
break;
case error.UNKNOWN_ERROR: msg = "Erreur inconnue !";
break;
case error.POSITION_UNVAILABLE: msg = "Position non valide !";
break;
case error.PERMISSION_DENIED: msg = "Vous avez refuser la géolocalisation !";
break;
}
alert(msg);
}
if (navigator.geolocation) {

navigator.geolocation.getCurrentPosition(Geo, erreurGeo, {maximumAge: 120000});
} else {}
	</script>
	<script>

		$(document).on('change', '#add_annoucement_regions, #add_annoucement_departement_id', function () {
let $field = $(this)
let $regionField = $('#add_annoucement_regions')
let $form = $field.closest('form')
let target = '#' + $field.attr('id').replace('departement_id', 'villesfrance_id').replace('regions', 'departement_id')
// Les données à envoyer en Ajax
let data = {}
data[$regionField.attr('name')] = $regionField.val()
data[$field.attr('name')] = $field.val()
// On soumet les données
$.post($form.attr('action'), data).then(function (data) { // On récupère le nouveau <select>
let $input = $(data).find(target)
// On remplace notre <select> actuel
$(target).replaceWith($input)

})
})
// }
// }
	</script>
